# Smart Plant AI - Environment Variables Template
# Copy this file to .env and fill in your actual values

# App Configuration
EXPO_PUBLIC_APP_NAME=Smart Plant AI
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_SCHEME=smartplantapp
EXPO_PUBLIC_BUNDLE_ID=com.smartplant.ai

# API Configuration
EXPO_PUBLIC_API_BASE_URL=https://api.smartplant.ai
EXPO_PUBLIC_API_VERSION=v1
EXPO_PUBLIC_API_TIMEOUT=30000

# Authentication - Google OAuth
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here
EXPO_PUBLIC_GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Authentication - Apple Sign In
EXPO_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id-here

# Authentication - Facebook OAuth
EXPO_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id-here
EXPO_PUBLIC_FACEBOOK_CLIENT_TOKEN=your-facebook-client-token-here

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key-here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# AI Services
EXPO_PUBLIC_PLANTNET_API_KEY=your-plantnet-api-key-here
EXPO_PUBLIC_GOOGLE_VISION_API_KEY=your-google-vision-api-key-here
EXPO_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here

# Weather API
EXPO_PUBLIC_WEATHER_API_KEY=your-weather-api-key-here
EXPO_PUBLIC_WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Push Notifications
EXPO_PUBLIC_EXPO_PUSH_TOKEN=your-expo-push-token-here

# Analytics
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token-here
EXPO_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-api-key-here

# Error Tracking
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# Payment
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here

# Development/Debug Settings
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_MOCK_API=false

# Feature Flags
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_PREMIUM_FEATURES=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# Regional Settings
EXPO_PUBLIC_DEFAULT_LANGUAGE=th
EXPO_PUBLIC_DEFAULT_CURRENCY=THB
EXPO_PUBLIC_DEFAULT_TIMEZONE=Asia/Bangkok
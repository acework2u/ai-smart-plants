# Core service configuration
NODE_ENV=development
PORT=4000
LOG_LEVEL=info
APP_NAME=smart-plant-backend

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=smartplants
POSTGRES_USER=smartplants
POSTGRES_PASSWORD=smartplants

# Redis / cache
REDIS_HOST=redis
REDIS_PORT=6379

# Database URL (Prisma)
DATABASE_URL=postgresql://smartplants:smartplants@postgres:5432/smartplants

# External services
ANALYSIS_API_BASE_URL=http://analysis-api:5000

# Security
JWT_JWKS_URI=https://auth.smartplants.dev/.well-known/jwks.json
JWT_AUDIENCE=https://api.smartplants.app
JWT_ISSUER=https://auth.smartplants.dev/
